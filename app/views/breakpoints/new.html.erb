  <div id="main">
    <div class="frame">
      <div class="col1 main-content" >
        <h1>Add reward tier</h1>

        <%= form_for [@project, @breakpoint] do |f|%>
        <p class="form-label">
        	<%= f.label :title %></br>
        	<%= f.text_field :title %>
        </p>
        <p class="form-label">
      		<%= f.label :amount_in_cents %></br>
      		<%= f.number_field :amount_in_cents %>
      	</p>
          <p class="form-label">
            <%= f.label :limit, "Max rewards available" %></br>
            (leave blank if unlimited)</br>
            <%= f.number_field :limit, :min => 1, :placeholder => "Unlimited" %>
          </p>
        <p class="form-label">
        	<%= f.label :description %></br>
        	<%= f.text_area :description %>
        </p>
        <p class="form-label">
        	<%= f.submit "Create Reward Tier", class: "button" %>
        </p>
        <% end %>
      </div>
    </div>
  </div>