<h1> Project Comments</h1>

<% if current_user %>

	<%= form_for [ @project, @comment ] do |f| %>
	<p class="form-label">
		<%= f.label :title %></br>
		<%= f.text_field :title %>
	</p>

	<p class="form-label">
		<%= f.label :description %></br>
		<%= f.text_area :description %>
	</p>

	<p class="form-label">
		<%= f.submit "Save", class: "button" %>
	</p>

	<% end %>

	<% else %>
	<br>
	<br>
		<p> "Must login first" </p>
	<% end  %>