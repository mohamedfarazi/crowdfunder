<%= form_for [ @project, @comment ] do |f| %>
  <%= render partial: "shared/form_errors", locals: {anyword: @comment} %>
<p class="form-label">
	<%= f.label :title %></br>
	<%= f.text_field :title, size: 60 %>
</p>

<p class="form-label">
	<%= f.label :description %></br>
	<%= f.text_area :description, rows:20, cols:60 %>
</p>

<p class="form-label">
	<%= f.submit "Save", class: "button" %>
</p>

<% end %>