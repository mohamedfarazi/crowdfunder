<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>

<p>Hi, <%= current_user.name %> <%= link_to "Log Out", session_path("current"), :method => :delete %></p>

<%= link_to "Add new projects", new_project_path %>

<% else %>


<%= link_to "Login", new_session_path %> | <%= link_to "Register", new_user_path %>

<% end %>

<%= yield %>

</body>
</html>
