<div class="col4">
	<div class="img-thumb-back">
	<%= link_to image_tag(project.image, class: "img-thumb"), project %>

	<table class="prod-overview">
		<tr>
			<th colspan="2">
			<%= link_to truncate(project.name, :length => 30, :separator => ' '), project  %>
			</th>
		</tr>
		<tr>
			<th colspan="2">
				<% if Time.now < project.end_date %>
					Ends in <%= time_to_close(project) %>
				<% else %>
					Ended <%= project.end_date.strftime "%Y-%m-%d" %>
				<% end %>
			</th>
		</tr>
		<tr>
			<td>Goal: <%= display_money_short(project.goal_in_cents) %></td>
			<td>Raised: <%= display_money_short(total_pledges(project))%></td>
		</tr>
	</table>
	</div>
</div>