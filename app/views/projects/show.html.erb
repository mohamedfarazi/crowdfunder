<div id="main">
<div class="frame">
	<div class="col66">
		<div class="img-back">
			<%= image_tag(@project.image, class: "img-full")  %>
		</div>
		<table class="prod-full">
		<tr>
			<th class="label-title">
			<h3><%= @project[:name] %></h3>
			</th>
		</tr>
		<tr>
			<td class="byline">
			<h4>by <%= link_to @project.owner.name, user_path(@project.owner) %></h4>
			</td>
		</tr>
		<tr>
			<td><h4>Goal: <%= display_money(@project.goal_in_cents) %></h4></td>
		</tr>
		<tr>
			<td id="pledged" data-intro='This is how much has been raised by other backers' data-position='right'>Raised: <%= display_money(total_pledges(@project)) %></td>
		</tr>
		<tr>
			<td>Begins: <%= @project.start_date.strftime "%A, %-d %B %Y" %></td>
		</tr>
		<tr>
			<td>Ends: <%= @project.end_date.strftime "%A, %-d %B %Y" %></td>
		</tr>
		<tr>
			<td>
				<div id="countdowntimer">
					<span id="future_date"></span>
				</div>
			</td>
		</tr>
		<tr>
			<td data-intro='This is the product description' data-position='right'><%= @project[:description] %></td>
		</tr>
		</table>
</div>

	<div class="col3" data-intro='These are the different rewards you can pledge to. Remember that you cannot back out of a pledge once committed.' data-position='left'>

			<% @project.breakpoints.by_price.each do |bp| %>
				<div class="prod-full" id="tier-<%= bp.id %>" >
						<div class="label-title">
							<%= bp.title %>
						</div>
						<p><%= display_money(bp.amount_in_cents) %></p>
						<p><%= bp.description %></p>
						<p>
							<% if current_user %>
							<% if backed_bp(current_user, @project) %>
								<% if backed_bp(current_user, @project) == bp %>
								<h4 id="pledge_bp">You pledged at this tier</h4>
								<% end %>
							 <% elsif (@project.owner != current_user) %>
									<%= form_tag('/pledges', remote: true, class: "breakpoint") do %>
										<%= hidden_field_tag 'bp_id', bp.id %>
										<%= submit_tag "Pledge at this tier ", class: "button pledge_button" %>
									<% end %>
							 <% end %>
							<% end %>
						</p>
				</div>
			<% end %>
			<div class="prod-full">
				<% if @project.owner == current_user  %>
					<p><%= link_to "Add another tier", new_project_breakpoint_path(@project) %></p>
				<% elsif !current_user %>
					<p>Please <%= link_to "log in", new_session_path %> or <%= link_to "register", new_user_path %> to back this project</p>
				<% end %>
			</div>
</div>

</div>
</div>
<script type="text/javascript">
$(function(){
	$("#future_date").countdowntimer({
      dateAndTime : "<%= "#{@project.end_date.strftime "%Y/%m/%d %T"}" %>",
      size : "sm",
      borderColor: "#FFFFFF",
      backgroundColor: "#AAAAAA",
      fontColor: "#FFFFFF"
	});
});
</script>
<% if current_user %>
	<% if @show_overlay %>
		<script>
			jQuery(document).ready(function($) {
				window.setTimeout(function(){
					$('body').chardinJs('start');
				}, 1000)
			});
		</script>
	<% end %>
<% end %>